#!/usr/bin/env bash
set -euo pipefail

assert() {
  local actual
  actual="$($1)"
  if [[ "$actual" != "$2" ]]; then
    echo "Expected '$2' but got '$actual'"
    exit 1
  fi
}

assert "mise x -C $PWD/direnv -- pwd" "$(pwd)/direnv"
assert "mise x -C ./direnv -- pwd" "$(pwd)/direnv"
assert "mise x -C direnv -- pwd" "$(pwd)/direnv"
