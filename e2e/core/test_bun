#!/usr/bin/env bash

# Enable idiomatic version files for bun
mise settings set idiomatic_version_file_enable_tools bun

cat <<EOF >.bun-version
1.1.21
EOF

assert "mise i"
assert_contains "mise x bun -- bun -v" "1.1.21"

require_cmd node
assert_contains 'mise x bun -- bunx cowsay "hello world"' "hello world"
