#!/usr/bin/env bash

# ensures depends_post and depends can be used on separate tasks
cat <<EOF >mise.toml
[tasks.one]
run = "echo one"

[tasks.two]
depends = ["one"]
run = "echo two"

[tasks.three]
depends_post = ["two"]
run = "echo three"
EOF
assert "mise tasks deps" "one
three
two
├── three
└── one"
assert "mise run three"

