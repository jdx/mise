#!/usr/bin/env bash
set -euo pipefail

assert() {
  local actual
  actual="$($1)"
  if [[ "$actual" != "$2" ]]; then
    echo "Expected '$2' but got '$actual'"
    exit 1
  fi
}

assert "mise x node@20.0.0 --log-level debug -- node -v" "v20.0.0"
assert "mise x node@20.0.0 --log-level=debug -- node -v" "v20.0.0"
assert "mise x node@20.0.0 --debug -- node -v" "v20.0.0"
assert "mise x node@20.0.0 --trace -- node -v" "v20.0.0"
