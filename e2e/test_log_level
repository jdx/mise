#!/usr/bin/env bash
set -euo pipefail

assert() {
  local actual
  actual="$($*)"
  if [[ "$actual" != "$2" ]]; then
    echo "Expected '$2' but got '$actual'"
    exit 1
  fi
}

assert "rtx x nodejs@18.0.0 --log-level debug -- node -v" "v18.0.0"
assert "rtx x nodejs@18.0.0 --log-level=debug -- node -v" "v18.0.0"
