#!/usr/bin/env bash

assert() {
  actual="$($1)"
  actual="${actual%$'\n'}"
  expected="${2%$'\n'}"
  if [[ "$actual" != "$expected" ]]; then
    echo "assertion failed, expected '$expected', got '$actual'"
    exit 1
  fi
}
assert_raises() {
  if ! $1; then
    echo "assertion failed: $1"
    exit 1
  fi
}

export RTX_MISSING_RUNTIME_BEHAVIOR=autoinstall

assert_raises "rtx uninstall shfmt@3.6.0"

assert "rtx local" "dotenv = '.test-env'
[env]
FOO = \"bar\"
PATH = [\"/root\", \"./cwd\", \"\$PATH\"]

[tools]
tiny = \"latest\"
#golang = {version=\"1.19.5\", foo=\"bar\"}
"

assert "rtx local shfmt@3.5.0" "dotenv = '.test-env'
[env]
FOO = \"bar\"
PATH = [\"/root\", \"./cwd\", \"\$PATH\"]

[tools]
tiny = \"latest\"
shfmt = \"3.5.0\"
#golang = {version=\"1.19.5\", foo=\"bar\"}
"

rtx exec -- shfmt --version >&2
if [[ "$(rtx exec -- shfmt --version)" != "v3.5.0" ]]; then
  exit 1
fi

assert_raises "rtx uninstall shfmt@3.6.0"
assert_raises "rtx local shfmt --install-missing"

assert "rtx local shfmt@3.6.0" "dotenv = '.test-env'
[env]
FOO = \"bar\"
PATH = [\"/root\", \"./cwd\", \"\$PATH\"]

[tools]
tiny = \"latest\"
shfmt = \"3.6.0\"
#golang = {version=\"1.19.5\", foo=\"bar\"}
"

rtx exec -- shfmt --version >&2
if [[ "$(rtx exec -- shfmt --version)" != "v3.6.0" ]]; then
  exit 1
fi

assert "rtx local --rm shfmt" "dotenv = '.test-env'
[env]
FOO = \"bar\"
PATH = [\"/root\", \"./cwd\", \"\$PATH\"]

[tools]
tiny = \"latest\"
#golang = {version=\"1.19.5\", foo=\"bar\"}
"


export RTX_DEFAULT_CONFIG_FILENAME=.MISSING

assert_raises "rtx uninstall shfmt@3.6.0"

assert "rtx local --install-missing" "#python 3.11.1 3.10.9 # foo
shellcheck 0.9.0
shfmt      3.6.0 # test comment
#nodejs    18.13.0
"

assert "rtx local shfmt@3.5.0" "#python 3.11.1 3.10.9 # foo
shellcheck 0.9.0
shfmt      3.5.0 # test comment
#nodejs    18.13.0
"

rtx exec -- shfmt --version >&2
if [[ "$(rtx exec -- shfmt --version)" != "v3.5.0" ]]; then
  exit 1
fi

assert "rtx local shfmt@3.6.0" "#python 3.11.1 3.10.9 # foo
shellcheck 0.9.0
shfmt      3.6.0 # test comment
#nodejs    18.13.0
"

rtx exec -- shfmt --version >&2
if [[ "$(rtx exec -- shfmt --version)" != "v3.6.0" ]]; then
  exit 1
fi
