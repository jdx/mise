FROM fedora:42
LABEL maintainer="jdx"

# Install packaging dependencies
RUN dnf update -y && \
    dnf install -y \
        rpm-build \
        rpmdevtools \
        python3-pip \
        git \
        rust \
        cargo \
        gcc \
        tar \
        gzip && \
    dnf clean all

# Install copr-cli
RUN pip3 install copr-cli

# Add mise to PATH
ENV PATH="/root/.local/bin:${PATH}"

# Install mise and use it to install cargo-vendor
RUN curl https://mise.run | sh
RUN mise use -g cargo-binstall cargo:cargo-vendor

# Set up RPM build environment
RUN rpmdev-setuptree

# Set working directory
WORKDIR /workspace

# Copy the build script
COPY build-copr.sh /usr/local/bin/build-copr.sh
RUN chmod +x /usr/local/bin/build-copr.sh

ENTRYPOINT ["/usr/local/bin/build-copr.sh"]